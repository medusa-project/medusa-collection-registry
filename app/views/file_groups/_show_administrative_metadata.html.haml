= show_field @file_group, :uuid
= show_value((link_to(@file_group.producer.title, @file_group.producer) if @file_group.producer), 'Producer')
= show_field @file_group, :provenance_note
= show_field @file_group, :acquisition_method
= show_field @file_group, :storage_level
- if @file_group.source_file_groups.present?
  %p
    %strong Source File Groups
  %ul
    - @file_group.source_file_groups.each do |source_file_group|
      %li
        #{link_to(source_file_group.title, source_file_group)} - #{@file_group.source_relation_note(source_file_group)}
- if @file_group.target_file_groups.present?
  %p
    %strong Target File Groups
  %ul
    - @file_group.target_file_groups.each do |target_file_group|
      %li
        #{link_to(target_file_group.title, target_file_group)} - #{@file_group.target_relation_note(target_file_group)}
= show_field @file_group, :external_file_location
= show_field @file_group, :staged_file_location
= show_value (@file_group.file_size * 1.gigabyte).to_fs(:human_size, precision: 3), 'Total file size'
= show_value @file_group.file_count.to_fs(:delimited), 'Total files'
