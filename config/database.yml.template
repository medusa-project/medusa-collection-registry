# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: medusa_test
  host: localhost
  port: 5432
  min_messages: warning
  encoding: unicode
  template: template0

production:
  adapter: postgresql
  database: medusa_production
  host: localhost
  port: 5432
  min_messages: warning
  encoding: unicode
  template: template0
