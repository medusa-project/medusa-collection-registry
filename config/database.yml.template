# PostgreSQL version 9.x
#   gem install pg
#
#   Ensure the PostgreSQL gem is defined in your Gemfile
#   gem 'pg'
development:
  adapter: postgresql
  database: medusa_development
  host: localhost
  port: 5432
  min_messages: warning
  encoding: unicode
  template: template0

# Warning: The database defined as "test" will be erased and
